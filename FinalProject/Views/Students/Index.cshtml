@model IEnumerable<FinalProject.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student Veterans</h2>

<p>
    @Html.ActionLink("Add New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("FIRST")
        </th>
        <th>
            @Html.DisplayName("MIDDLE")
        </th>
        <th>
            @Html.DisplayName("LAST")
        </th>
        <th>
            @Html.DisplayName("SEX")
        </th>
        <th>
            @Html.DisplayName("EPGM")
        </th>
        <th>
            @Html.DisplayName("DEGREE TITLE")
        </th>
        <th>
            @Html.DisplayName("VA BENEFITS")
        </th>
        <th>
            @Html.DisplayName("PHONE NUMBER")
        </th>
        <th>
            @Html.DisplayName("ALT NUMBER")
        </th>
        <th>
            @Html.DisplayName("EMAIL")
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MiddleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sex)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DegreeTitle.Epgm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DegreeTitle.DegreeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VaChapter1.ChapterName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AltPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.StudentId })
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.StudentId })
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.StudentId })
        </td>
    </tr>
}

</table>
